<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/css/admin.css" rel="stylesheet">
</head>
<body>
    <%- include('../../partials/admin-sidebar') %>

    <main class="admin-main">
        <%- include('../../partials/flash-messages') %>

        <div class="mb-4">
            <a href="/admin/transaction-proofs" class="text-muted text-decoration-none"><i class="bi bi-arrow-left me-1"></i> Quay lại</a>
            <h4 class="fw-bold mt-2"><%= proof ? 'Sửa bằng chứng giao dịch' : 'Thêm bằng chứng giao dịch mới' %></h4>
        </div>

        <div class="form-card" style="max-width:800px">
            <form action="/admin/transaction-proofs<%= proof ? '/' + proof.id : '' %>" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label"><i class="bi bi-image me-1"></i> Ảnh bằng chứng <span class="text-danger">*</span></label>
                    <input type="file" name="image" class="form-control" id="imageInput" accept="image/*" <%= proof ? '' : 'required' %>>
                    <small class="text-muted">Chấp nhận: JPG, PNG, GIF, WebP. Tối đa 5MB.</small>
                    <% if (proof) { %>
                        <input type="hidden" name="existing_image" value="<%= proof.image_path || '' %>">
                    <% } %>
                    <div id="imagePreview" class="mt-3" style="<%= (proof && proof.image_path) ? '' : 'display:none' %>">
                        <img id="previewImg" src="<%= (proof && proof.image_path) ? proof.image_path : '' %>"
                             alt="Preview" style="max-height:300px;border-radius:8px;border:1px solid rgba(255,255,255,0.1)">
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Tên khách hàng</label>
                    <input type="text" name="customer_name" class="form-control" value="<%= proof ? (proof.customer_name || '') : '' %>" placeholder="VD: Nguyễn Văn A">
                    <small class="text-muted">Tên khách hàng thực hiện giao dịch (tùy chọn)</small>
                </div>

                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Số tiền giao dịch (VNĐ)</label>
                        <input type="number" name="amount" class="form-control" value="<%= proof ? (proof.amount || 0) : 0 %>" min="0" placeholder="VD: 500000">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Ngày giao dịch</label>
                        <input type="date" name="transaction_date" class="form-control" value="<%= proof ? (proof.transaction_date ? new Date(proof.transaction_date).toISOString().split('T')[0] : '') : '' %>">
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Ghi chú</label>
                    <textarea name="notes" class="form-control" rows="3" placeholder="Ghi chú về giao dịch (nếu có)"><%= proof ? (proof.notes || '') : '' %></textarea>
                </div>

                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <label class="form-label">Thứ tự hiển thị</label>
                        <input type="number" name="sort_order" class="form-control" value="<%= proof ? proof.sort_order : 0 %>" min="0">
                    </div>
                    <div class="col-md-6 d-flex align-items-end">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" name="is_visible" id="is_visible" value="1" <%= (!proof || proof.is_visible) ? 'checked' : '' %>>
                            <label class="form-check-label" for="is_visible">Hiển thị trên Landing Page</label>
                        </div>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary px-4"><i class="bi bi-check-lg me-1"></i> <%= proof ? 'Cập nhật' : 'Thêm mới' %></button>
                    <a href="/admin/transaction-proofs" class="btn btn-outline-secondary">Hủy</a>
                </div>
            </form>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Preview ảnh khi chọn file
        document.getElementById('imageInput').addEventListener('change', function(e) {
            const file = e.target.files[0];
            const preview = document.getElementById('imagePreview');
            const img = document.getElementById('previewImg');
            if (file) {
                const reader = new FileReader();
                reader.onload = function(ev) {
                    img.src = ev.target.result;
                    preview.style.display = 'block';
                };
                reader.readAsDataURL(file);
            }
        });
    </script>
</body>
</html>
