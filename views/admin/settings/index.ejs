<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/css/admin.css" rel="stylesheet">
</head>
<body>
    <%- include('../../partials/admin-sidebar') %>
    <main class="admin-main">
        <%- include('../../partials/flash-messages') %>
        <h4 class="fw-bold mb-4"><i class="bi bi-gear me-2"></i>Cài đặt hệ thống</h4>

        <div class="row g-4">
            <!-- Cài đặt chung -->
            <div class="col-lg-8">
                <div class="form-card">
                    <h5 class="fw-bold mb-3"><i class="bi bi-sliders me-2"></i>Cài đặt chung</h5>
                    <form action="/admin/settings/general" method="POST" enctype="multipart/form-data">
                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Tên thương hiệu</label>
                                <input type="text" name="brand_name" class="form-control" value="<%= settings.brand_name || '' %>">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Logo (ảnh, tối đa 2MB)</label>
                                <input type="file" name="brand_logo" class="form-control" accept="image/*">
                                <% if (settings.brand_logo) { %>
                                    <small class="text-muted">Hiện tại: <img src="<%= settings.brand_logo %>" alt="logo" style="height:30px;margin-top:4px"></small>
                                <% } %>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Slogan</label>
                            <input type="text" name="brand_slogan" class="form-control" value="<%= settings.brand_slogan || '' %>">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Mô tả thương hiệu</label>
                            <textarea name="brand_description" class="form-control" rows="2"><%= settings.brand_description || '' %></textarea>
                        </div>
                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label class="form-label"><i class="bi bi-chat-dots text-primary me-1"></i>Link Zalo (nút Mua ngay)</label>
                                <input type="text" name="zalo_link" class="form-control" value="<%= settings.zalo_link || '' %>" placeholder="https://zalo.me/0123456789">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label"><i class="bi bi-facebook text-primary me-1"></i>Link Facebook</label>
                                <input type="text" name="facebook_link" class="form-control" value="<%= settings.facebook_link || '' %>">
                            </div>
                        </div>
                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Email liên hệ</label>
                                <input type="email" name="contact_email" class="form-control" value="<%= settings.contact_email || '' %>">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Số điện thoại</label>
                                <input type="text" name="contact_phone" class="form-control" value="<%= settings.contact_phone || '' %>">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary"><i class="bi bi-check-lg me-1"></i> Lưu cài đặt</button>
                    </form>
                </div>
            </div>

            <!-- Đổi mật khẩu -->
            <div class="col-lg-4">
                <div class="form-card">
                    <h5 class="fw-bold mb-3"><i class="bi bi-shield-lock me-2"></i>Đổi mật khẩu</h5>
                    <form action="/admin/settings/password" method="POST">
                        <div class="mb-3">
                            <label class="form-label">Mật khẩu hiện tại</label>
                            <input type="password" name="current_password" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Mật khẩu mới</label>
                            <input type="password" name="new_password" class="form-control" required minlength="6">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Xác nhận mật khẩu mới</label>
                            <input type="password" name="confirm_password" class="form-control" required minlength="6">
                        </div>
                        <button type="submit" class="btn btn-primary w-100"><i class="bi bi-key me-1"></i> Đổi mật khẩu</button>
                    </form>
                </div>
            </div>
        </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

