<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/css/admin.css" rel="stylesheet">
</head>
<body>
    <%- include('../../partials/admin-sidebar') %>

    <main class="admin-main">
        <%- include('../../partials/flash-messages') %>

        <div class="mb-4">
            <a href="/admin/fixed-costs" class="text-muted text-decoration-none"><i class="bi bi-arrow-left me-1"></i> Quay lại</a>
            <h4 class="fw-bold mt-2"><%= fixedCost ? 'Sửa chi phí cố định' : 'Thêm chi phí cố định mới' %></h4>
        </div>

        <div class="form-card" style="max-width:700px">
            <form action="/admin/fixed-costs<%= fixedCost ? '/' + fixedCost.id : '' %>" method="POST">
                <div class="mb-3">
                    <label class="form-label">Tên chi phí <span class="text-danger">*</span></label>
                    <input type="text" name="name" class="form-control" value="<%= fixedCost ? fixedCost.name : '' %>" required placeholder="VD: Thuê văn phòng">
                </div>

                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Số tiền (VNĐ) <span class="text-danger">*</span></label>
                        <input type="number" name="amount" class="form-control" value="<%= fixedCost ? fixedCost.amount : '' %>" required min="0" step="1000" placeholder="VD: 5000000">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Danh mục</label>
                        <input type="text" name="category" class="form-control" value="<%= fixedCost ? (fixedCost.category || '') : '' %>" placeholder="VD: Văn phòng, Nhân sự, Marketing">
                    </div>
                </div>

                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Ngày bắt đầu <span class="text-danger">*</span></label>
                        <input type="date" name="start_date" class="form-control" value="<%= fixedCost ? fixedCost.start_date : '' %>" required>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Ngày kết thúc</label>
                        <input type="date" name="end_date" class="form-control" value="<%= fixedCost ? (fixedCost.end_date || '') : '' %>">
                        <small class="text-muted">Để trống nếu không có ngày kết thúc</small>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Ghi chú</label>
                    <textarea name="notes" class="form-control" rows="3" placeholder="Ghi chú thêm về chi phí này..."><%= fixedCost ? (fixedCost.notes || '') : '' %></textarea>
                </div>

                <div class="mb-4">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" name="is_active" id="is_active" value="1" <%= (!fixedCost || fixedCost.is_active) ? 'checked' : '' %>>
                        <label class="form-check-label" for="is_active">Đang hoạt động</label>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary px-4"><i class="bi bi-check-lg me-1"></i> <%= fixedCost ? 'Cập nhật' : 'Thêm mới' %></button>
                    <a href="/admin/fixed-costs" class="btn btn-outline-secondary">Hủy</a>
                </div>
            </form>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
