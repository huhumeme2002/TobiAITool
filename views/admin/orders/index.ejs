<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/css/admin.css" rel="stylesheet">
</head>
<body>
    <%- include('../../partials/admin-sidebar') %>
    <main class="admin-main">
        <%- include('../../partials/flash-messages') %>
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h4 class="fw-bold mb-1"><i class="bi bi-receipt me-2"></i>Quản lý đơn hàng</h4>
                <p class="text-muted mb-0">Tổng: <%= total %> đơn hàng</p>
            </div>
            <a href="/admin/orders/create" class="btn btn-primary"><i class="bi bi-plus-lg me-1"></i> Thêm đơn hàng</a>
        </div>
        <!-- Bộ lọc -->
        <div class="form-card mb-4">
            <form method="GET" class="row g-2 align-items-end">
                <div class="col-md-3">
                    <label class="form-label">Tìm kiếm</label>
                    <input type="text" name="search" class="form-control" value="<%= filters.search %>" placeholder="Tên KH, sản phẩm...">
                </div>
                <div class="col-md-2">
                    <label class="form-label">Trạng thái</label>
                    <select name="status" class="form-select">
                        <option value="">Tất cả</option>
                        <option value="paid" <%= filters.status === 'paid' ? 'selected' : '' %>>Đã thanh toán</option>
                        <option value="pending" <%= filters.status === 'pending' ? 'selected' : '' %>>Chưa thanh toán</option>
                        <option value="cancelled" <%= filters.status === 'cancelled' ? 'selected' : '' %>>Đã hủy</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Từ ngày</label>
                    <input type="date" name="startDate" class="form-control" value="<%= filters.startDate %>">
                </div>
                <div class="col-md-2">
                    <label class="form-label">Đến ngày</label>
                    <input type="date" name="endDate" class="form-control" value="<%= filters.endDate %>">
                </div>
                <div class="col-md-2">
                    <label class="form-label">Sắp xếp</label>
                    <select name="sortBy" class="form-select">
                        <option value="sale_date" <%= filters.sortBy === 'sale_date' ? 'selected' : '' %>>Ngày bán</option>
                        <option value="actual_price" <%= filters.sortBy === 'actual_price' ? 'selected' : '' %>>Giá trị</option>
                        <option value="profit" <%= filters.sortBy === 'profit' ? 'selected' : '' %>>Lợi nhuận</option>
                    </select>
                </div>
                <div class="col-md-1">
                    <button type="submit" class="btn btn-primary w-100"><i class="bi bi-search"></i></button>
                </div>
            </form>
        </div>
        <!-- Bảng đơn hàng -->
        <div class="table-dark-custom">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>STT</th><th>Ngày</th><th>Khách hàng</th><th>Sản phẩm</th>
                            <th>Giá bán</th><th>Chi phí</th><th>Lợi nhuận</th><th>Trạng thái</th><th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (orders.length === 0) { %>
                            <tr><td colspan="9" class="text-center text-muted py-4">Không có đơn hàng nào</td></tr>
                        <% } %>
                        <% orders.forEach((o, idx) => { %>
                        <tr>
                            <td><%= (currentPage - 1) * 15 + idx + 1 %></td>
                            <td class="text-nowrap"><%= o.sale_date %></td>
                            <td><%= o.customer_name %><% if(o.customer_phone) { %><br><small class="text-muted"><%= o.customer_phone %></small><% } %></td>
                            <td><%= o.product_name %></td>
                            <td class="text-success fw-bold"><%= Number(o.actual_price).toLocaleString('vi-VN') %>đ</td>
                            <td class="text-warning"><%= Number(o.cost).toLocaleString('vi-VN') %>đ</td>
                            <td class="fw-bold" style="color:#a855f7"><%= Number(o.profit).toLocaleString('vi-VN') %>đ</td>
                            <td>
                                <% if(o.status==='paid') { %><span class="badge badge-paid px-2 py-1">Đã TT</span>
                                <% } else if(o.status==='pending') { %><span class="badge badge-pending px-2 py-1">Chưa TT</span>
                                <% } else { %><span class="badge badge-cancelled px-2 py-1">Đã hủy</span><% } %>
                            </td>
                            <td class="text-nowrap">
                                <a href="/admin/orders/edit/<%= o.id %>" class="btn btn-sm btn-outline-primary me-1"><i class="bi bi-pencil"></i></a>
                                <form action="/admin/orders/delete/<%= o.id %>" method="POST" class="d-inline" onsubmit="return confirm('Xóa đơn hàng này?')">
                                    <button class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- Phân trang -->
        <% if (totalPages > 1) { %>
        <nav class="mt-3">
            <ul class="pagination justify-content-center">
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                        <a class="page-link" href="?page=<%= i %>&search=<%= filters.search %>&status=<%= filters.status %>&startDate=<%= filters.startDate %>&endDate=<%= filters.endDate %>&sortBy=<%= filters.sortBy %>"><%= i %></a>
                    </li>
                <% } %>
            </ul>
        </nav>
        <% } %>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

