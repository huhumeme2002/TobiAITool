    <script>
        // Claude Code Popup
        document.addEventListener('DOMContentLoaded', function() {
            const claudePopup = document.getElementById('claudePopup');
            const claudeClose = document.getElementById('claudeClose');
            const claudeCta = document.getElementById('claudeCta');
            
            // Show popup after a short delay
            setTimeout(() => {
                claudePopup.style.display = 'flex';
            }, 1500);
            
            // Close popup when clicking the close button
            claudeClose.addEventListener('click', function() {
                claudePopup.style.opacity = '0';
                setTimeout(() => {
                    claudePopup.style.display = 'none';
                }, 400);
            });
            
            // Close popup when clicking outside
            claudePopup.addEventListener('click', function(e) {
                if (e.target === claudePopup) {
                    claudePopup.style.opacity = '0';
                    setTimeout(() => {
                        claudePopup.style.display = 'none';
                    }, 400);
                }
            });
            
            // Scroll to Claude Code section when clicking the CTA button
            claudeCta.addEventListener('click', function(e) {
                e.preventDefault();
                const claudeSection = document.querySelector(this.getAttribute('href'));
                
                claudePopup.style.opacity = '0';
                setTimeout(() => {
                    claudePopup.style.display = 'none';
                    
                    if (claudeSection) {
                        const offsetTop = claudeSection.offsetTop - 100;
                        window.scrollTo({
                            top: offsetTop,
                            behavior: 'smooth'
                        });
                    }
                }, 400);
            });
        });
    </script>
